<div class="card mb-3">
    <a class='commentLink' href="/comment/{{id}}">
        <div class="card-header d-flex justify-content-between" id="postHeader">
            <p>{{post_title}}</p>
            <p>{{user.username}} {{format_time createdAt}}</p>
        </div>
        <p class="card-body">{{post_text}}</p>
    </a>
</div>
{{#if post.Comments}}
<section class="card">
    <div class="card-header">
        <h3>Comments</h3>
    </div>

    <div class="card-body">
        {{#each post.Comments}}
        <div>
            <p>
                {{body}}
            </p>
            <p>
                &mdash; {{user.username}}, {{format_date createdAt}}
            </p>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}
<div>
    <textarea id="commentInput"></textarea>
    <button id="postComment">Comment</button>
</div>